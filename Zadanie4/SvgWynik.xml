   <script type="text/ecmascript">

function MouseIn(evt) 
{
	var rect = evt.target;
	rect.setAttribute("stroke-width", "5");
}
function MouseOut(evt) 
{
	var rect = evt.target;
	rect.setAttribute("stroke-width", "3");
}
</script>
